<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/actionBarStyle</item>
    </style>

    <style name="actionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/actionBarTitleTextStyle</item>
    </style>

    <style name="actionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="fontFamilyStyle">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="fontFamilyStyle.MenuButtonStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/menuButtonTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fontFamilyStyle.menuHeadlineStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/menuHeadlineColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="numbersGameButtonStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/numbersGameButtonTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:width">140dp</item>
        <item name="android:height">140dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="fontFamilyStyle.highscoresTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/numbersGameButtonTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fontFamilyStyle.highscoresHeadlineTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/numbersGameButtonTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fontFamilyStyle.highScoresButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fontFamilyStyle.highscoresActivityHeadline">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/numbersGameButtonTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>