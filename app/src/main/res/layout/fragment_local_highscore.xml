<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="rubenbaskaran.com.brainchallenge.Highscore.LocalHighscoreFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:weightSum="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@drawable/table_cell_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text=""/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="Level 1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="Level 2"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="Level 3"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@drawable/table_cell_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="1st"/>

            <TextView
                android:id="@+id/LevelOneFirstScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="5 out of 5"/>

            <TextView
                android:id="@+id/LevelTwoFirstScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="7 out of 7"/>

            <TextView
                android:id="@+id/LevelThreeFirstScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="9 out of 11"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@drawable/table_cell_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="2nd"/>

            <TextView
                android:id="@+id/LevelOneSecondScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="10 out of 10"/>

            <TextView
                android:id="@+id/LevelTwoSecondScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="15 out of 15"/>

            <TextView
                android:id="@+id/LevelThreeSecondScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="2 out of 9"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@drawable/table_cell_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="3rd"/>

            <TextView
                android:id="@+id/LevelOneThirdScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="20 out of 21"/>

            <TextView
                android:id="@+id/LevelTwoThirdScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="6 out of 7"/>

            <TextView
                android:id="@+id/LevelThreeThirdScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/table_cell_border"
                android:text="9 out of 9/"/>
        </TableRow>
    </TableLayout>
</FrameLayout>
