<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="rubenbaskaran.com.brainspeedchallenge.Highscores.LocalHighscoreFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/highscore_background"
        android:columnCount="3">

        <TextView
            style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="0.8"
            android:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="rank"/>

        <TextView
            style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.4"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:text="score"/>

        <TextView
            style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="0.8"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:text="pct"/>

        <TextView
            style="@style/fontFamilyStyle"
            android:textColor="@color/usernameHighscoresColor"
            android:textSize="@dimen/usernameHighscoresTextSize"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.5"
            android:gravity="left|bottom"
            android:paddingLeft="30dp"
            android:text="Ruben"/>

        <TextView
            style="@style/fontFamilyStyle.highscoresTextStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="0.8"
            android:layout_rowWeight="0.5"
            android:gravity="top"
            android:paddingLeft="30dp"
            android:text="1st"/>

        <TextView
            android:id="@+id/FirstPlaceScore"
            style="@style/fontFamilyStyle.highscoresTextStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.4"
            android:layout_rowWeight="0.5"
            android:gravity="top|center_horizontal"
            android:text="x out of x"/>

        <TextView
            android:id="@+id/FirstPlacePercentage"
            style="@style/fontFamilyStyle.highscoresTextStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="0.8"
            android:layout_rowWeight="0.5"
            android:gravity="top|center_horizontal"
            android:text="%"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.25"
            android:gravity="center"/>

