<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="rubenbaskaran.com.brainchallenge.Highscores.LocalHighscoreFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/highscore_background"
        android:stretchColumns="*"
        android:weightSum="1.2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20">

            <TextView
                style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="rank"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="score"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="pct"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20">


            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1st"/>

            <TextView
                android:id="@+id/FirstPlaceScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="x out of x"/>

            <TextView
                android:id="@+id/FirstPlacePercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="%"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20">

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2nd"/>

            <TextView
                android:id="@+id/SecondPlaceScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="x out of x"/>

            <TextView
                android:id="@+id/SecondPlacePercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="%"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20">

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="3rd"/>

            <TextView
                android:id="@+id/ThirdPlaceScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="x out of x"/>

            <TextView
                android:id="@+id/ThirdPlacePercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="%"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20">

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4th"/>

            <TextView
                android:id="@+id/FourthPlaceScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="x out of x"/>

            <TextView
                android:id="@+id/FourthPlacePercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="%"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20">

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5th"/>

            <TextView
                android:id="@+id/FifthPlaceScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="x out of x"/>

            <TextView
                android:id="@+id/FifthPlacePercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="%"/>
        </TableRow>
    </TableLayout>
</FrameLayout>
