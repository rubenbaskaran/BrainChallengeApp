<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="rubenbaskaran.com.brainchallenge.Highscores.GlobalHighscoreFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:weightSum="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@drawable/table_cell_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text=""/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="Level 1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="Level 2"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="Level 3"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@drawable/table_cell_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="1st"/>

            <TextView
                android:id="@+id/LevelOneFirstScoreGlobal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="-"/>

            <TextView
                android:id="@+id/LevelTwoFirstScoreGlobal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="-"/>

            <TextView
                android:id="@+id/LevelThreeFirstScoreGlobal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="-"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@drawable/table_cell_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="2nd"/>

            <TextView
                android:id="@+id/LevelOneSecondScoreGlobal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="-"/>

            <TextView
                android:id="@+id/LevelTwoSecondScoreGlobal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="-"/>

            <TextView
                android:id="@+id/LevelThreeSecondScoreGlobal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="-"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@drawable/table_cell_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="3rd"/>

            <TextView
                android:id="@+id/LevelOneThirdScoreGlobal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="-"/>

            <TextView
                android:id="@+id/LevelTwoThirdScoreGlobal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="-"/>

            <TextView
                android:id="@+id/LevelThreeThirdScoreGlobal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_cell_border"
                android:gravity="center"
                android:text="-"/>
        </TableRow>
    </TableLayout>
</FrameLayout>
