<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="rubenbaskaran.com.brainspeedchallenge.Highscores.GlobalHighscoreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:translationZ="2dp"
            android:visibility="invisible"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="@drawable/highscore_background"
            android:columnCount="3">

            <TextView
                style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="rank"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1.4"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:text="score"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:text="pct"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="0.5"
                android:gravity="bottom"
                android:paddingLeft="30dp"
                android:text="1st"/>

            <TextView
                android:id="@+id/FirstPlaceGlobalScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1.4"
                android:layout_rowWeight="0.5"
                android:gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/FirstPlaceGlobalPercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="0.5"
                android:gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/FirstPlaceName"
                style="@style/fontFamilyStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0.5"
                android:gravity="top|left"
                android:paddingLeft="30dp"
                android:textColor="@color/usernameHighscoresColor"
                android:textSize="@dimen/usernameHighscoresTextSize"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0.25"
                android:gravity="center"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="0.5"
                android:gravity="bottom"
                android:paddingLeft="30dp"
                android:text="2nd"/>

            <TextView
                android:id="@+id/SecondPlaceGlobalScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1.4"
                android:layout_rowWeight="0.5"
                android:gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/SecondPlaceGlobalPercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="0.5"
                android:gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/SecondPlaceName"
                style="@style/fontFamilyStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0.5"
                android:gravity="top|left"
                android:paddingLeft="30dp"
                android:textColor="@color/usernameHighscoresColor"
                android:textSize="@dimen/usernameHighscoresTextSize"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0.25"
                android:gravity="center"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="0.5"
                android:gravity="bottom"
                android:paddingLeft="30dp"
                android:text="3rd"/>

            <TextView
                android:id="@+id/ThirdPlaceGlobalScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1.4"
                android:layout_rowWeight="0.5"
                android:gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/ThirdPlaceGlobalPercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="0.5"
                android:gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/ThirdPlaceName"
                style="@style/fontFamilyStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0.5"
                android:gravity="top|left"
                android:paddingLeft="30dp"
                android:textColor="@color/usernameHighscoresColor"
                android:textSize="@dimen/usernameHighscoresTextSize"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0.25"
                android:gravity="center"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="0.5"
                android:gravity="bottom"
                android:paddingLeft="30dp"
                android:text="4th"/>

            <TextView
                android:id="@+id/FourthPlaceGlobalScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1.4"
                android:layout_rowWeight="0.5"
                android:gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/FourthPlaceGlobalPercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="0.5"
                android:gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/FourthPlaceName"
                style="@style/fontFamilyStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0.5"
                android:gravity="top|left"
                android:paddingLeft="30dp"
                android:textColor="@color/usernameHighscoresColor"
                android:textSize="@dimen/usernameHighscoresTextSize"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0.25"
                android:gravity="center"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="0.5"
                android:gravity="bottom"
                android:paddingLeft="30dp"
                android:text="5th"/>

            <TextView
                android:id="@+id/FifthPlaceGlobalScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1.4"
                android:layout_rowWeight="0.5"
                android:gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/FifthPlaceGlobalPercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="0.8"
                android:layout_rowWeight="0.5"
                android:gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/FifthPlaceName"
                style="@style/fontFamilyStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0.5"
                android:gravity="top|left"
                android:paddingLeft="30dp"
                android:textColor="@color/usernameHighscoresColor"
                android:textSize="@dimen/usernameHighscoresTextSize"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="0.25"
                android:gravity="center"/>
        </GridLayout>
    </RelativeLayout>
</FrameLayout>