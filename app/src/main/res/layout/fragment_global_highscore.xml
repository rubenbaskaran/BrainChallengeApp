<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:grid="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="rubenbaskaran.com.brainspeedchallenge.Highscores.GlobalHighscoreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:translationZ="2dp"
            android:visibility="invisible"/>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="@drawable/highscore_background"
            grid:columnCount="3">

            <TextView
                style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="rank"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="1"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="score"
                grid:layout_columnWeight="1.4"
                grid:layout_rowWeight="1"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresHeadlineTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="pct"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="1"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:paddingLeft="30dp"
                android:text="1st"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="0.5"/>

            <TextView
                android:id="@+id/FirstPlaceGlobalScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                grid:layout_columnWeight="1.4"
                grid:layout_rowWeight="0.5"
                />

            <TextView
                android:id="@+id/FirstPlaceGlobalPercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="0.5"
                />

            <TextView
                android:id="@+id/FirstPlaceName"
                style="@style/fontFamilyStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="top|left"
                android:paddingLeft="30dp"
                android:textColor="@color/usernameHighscoresColor"
                android:textSize="@dimen/usernameHighscoresTextSize"
                grid:layout_columnSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="0.5"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                grid:layout_columnSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="0.25"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:paddingLeft="30dp"
                android:text="2nd"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="0.5"/>

            <TextView
                android:id="@+id/SecondPlaceGlobalScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                grid:layout_columnWeight="1.4"
                grid:layout_rowWeight="0.5"
                />

            <TextView
                android:id="@+id/SecondPlaceGlobalPercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="0.5"
                />

            <TextView
                android:id="@+id/SecondPlaceName"
                style="@style/fontFamilyStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="top|left"
                android:paddingLeft="30dp"
                android:textColor="@color/usernameHighscoresColor"
                android:textSize="@dimen/usernameHighscoresTextSize"
                grid:layout_columnSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="0.5"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                grid:layout_columnSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="0.25"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:paddingLeft="30dp"
                android:text="3rd"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="0.5"/>

            <TextView
                android:id="@+id/ThirdPlaceGlobalScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                grid:layout_columnWeight="1.4"
                grid:layout_rowWeight="0.5"
                />

            <TextView
                android:id="@+id/ThirdPlaceGlobalPercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="0.5"
                />

            <TextView
                android:id="@+id/ThirdPlaceName"
                style="@style/fontFamilyStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="top|left"
                android:paddingLeft="30dp"
                android:textColor="@color/usernameHighscoresColor"
                android:textSize="@dimen/usernameHighscoresTextSize"
                grid:layout_columnSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="0.5"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                grid:layout_columnSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="0.25"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:paddingLeft="30dp"
                android:text="4th"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="0.5"/>

            <TextView
                android:id="@+id/FourthPlaceGlobalScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                grid:layout_columnWeight="1.4"
                grid:layout_rowWeight="0.5"
                />

            <TextView
                android:id="@+id/FourthPlaceGlobalPercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="0.5"
                />

            <TextView
                android:id="@+id/FourthPlaceName"
                style="@style/fontFamilyStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="top|left"
                android:paddingLeft="30dp"
                android:textColor="@color/usernameHighscoresColor"
                android:textSize="@dimen/usernameHighscoresTextSize"
                grid:layout_columnSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="0.5"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                grid:layout_columnSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="0.25"/>

            <TextView
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:paddingLeft="30dp"
                android:text="5th"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="0.5"/>

            <TextView
                android:id="@+id/FifthPlaceGlobalScore"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                grid:layout_columnWeight="1.4"
                grid:layout_rowWeight="0.5"
                />

            <TextView
                android:id="@+id/FifthPlaceGlobalPercentage"
                style="@style/fontFamilyStyle.highscoresTextStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                grid:layout_columnWeight="0.8"
                grid:layout_rowWeight="0.5"
                />

            <TextView
                android:id="@+id/FifthPlaceName"
                style="@style/fontFamilyStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="top|left"
                android:paddingLeft="30dp"
                android:textColor="@color/usernameHighscoresColor"
                android:textSize="@dimen/usernameHighscoresTextSize"
                grid:layout_columnSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="0.5"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                grid:layout_columnSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="0.25"/>
        </android.support.v7.widget.GridLayout>
    </RelativeLayout>
</FrameLayout>